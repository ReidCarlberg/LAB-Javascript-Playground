<apex:page docType="html-5.0" showHeader="false" standardstylesheets="false" sidebar="false" standardController="Opportunity">

<!-- Css -->
    <apex:stylesheet value="{!URLFOR($Resource.LABJS_Bootstrap, 'bootstrap231/css/bootstrap.min.css')}"/>
    <apex:stylesheet value="{!URLFOR($Resource.LABJS_Bootstrap, 'bootstrap231/css/bootstrap-responsive.min.css')}"/>  
    <apex:stylesheet value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/css/bootstrap-custom.css')}"/> 

<!-- Javascript -->
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/js/jquery-2.0.0.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/js/angular.min.1.1.4.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/js/angular-ui.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/js/ui-bootstrap-tpls-0.3.0.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/js/log.min.js')}"/>

<!-- This is the ngForce module and service that provides VF Remoting access to the API -->
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/services/ngForce.min.js')}"/>

<!-- Angular Modules -->
<!-- This includes the module that defines our application -->
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/ngForceDemoApp.js')}"/>

<!-- Angular Services -->

<!-- Angular Controllers -->
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/controllers/oppBoxCtrl.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/controllers/navCtrl.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/controllers/oppDetailsCtrl.js')}"/>

<!-- Angular Directives -->
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/directives/oppBox.min.js')}"/>
    <apex:includeScript value="{!URLFOR($Resource.LABJS_ngForce, 'ngForce/directives/oppDetails.min.js')}"/>

<body ng-app="ngForceDemo">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">ngForce Demo</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        Logged in as <a href="#" class="navbar-link">{!$User.userName}</a>
                    </p>
                    <ul class="nav">
                        <li><a href="/006/o">Return to Standard View</a></li>
                        <li><a href="http://www.twitter.com/codefriar">@codefriar</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>
        
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav" ng-controller="navCtrl">
                    <ul class="nav nav-list">
                        <li class="nav-header">Filter Opportunities By StageName</li>
                        <li>
                            <a href="#" ng-click="broadcastFilter('')">Show All</a>
                        </li>
                        <li ng-repeat="name in stageNames">
                            <a href="#" ng-click="broadcastFilter(name.label)">{{name.label}}</a>
                        </li>
                    </ul>
                </div><!--/.well -->
            </div><!--/span w/ navCtrl-->
            <div class="span9" ng-controller="oppBoxCtrl">
                <opp-box></opp-box>
            </div><!--/span-->
        </div><!--/row-->
        
        <hr></hr>
        <footer>
            <c:LABJS_ngforce />
            <p><a href="http://www.codefriar.com">Â© Ignoti et Quasi Oculti Declaravimus - 2013</a></p>
        </footer>
        
    </div><!--/.fluid-container-->

    <style>
    
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav {
            padding: 9px 0;
        }
        
        @media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }
        
    </style>
</body>
</apex:page>